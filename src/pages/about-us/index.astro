---
import Layouts from "@layouts/Layouts.astro";

import { getNews, getLeaderShip } from "@utils/prismic";

import {
  Partners,
  PressHighlights,
  HeroTwoSideImageFade,
} from "@components/utils";

import {
  Section,
  CoreValues,
  CEOMessage,
  OurLeadership,
} from "@components/about-us";

import Mest from "@assets/images/logos/partners/mest.png";
import ImageLeft from "@assets/images/about-us/hero-1.webp";
import ImageRight from "@assets/images/about-us/hero-2.webp";
import TazaPay from "@assets/images/logos/partners/tazapay.png";
import Ingressive from "@assets/images/logos/partners/ingressive.png";
import FreezeLink from "@assets/images/logos/partners/freezelink.webp";

const newsData = await getNews({ page: 1, pageSize: 4 });

const leadershipData = await getLeaderShip({
  page: 1,
  pageSize: 10,
});

const assets = [Mest, TazaPay, FreezeLink, Ingressive];
---

<Layouts
  title="About Us | Complete Farmer"
  description="We are providing cutting-edge technological farming protocols and innovations with a unique business model and logistics that are revolutionizing..."
>
  <HeroTwoSideImageFade
    client:visible
    leftImage={ImageLeft.src}
    rightImage={ImageRight.src}
    heading="Meet the all-in-one platform digitizing agriculture from supply to demand"
  />

  <CEOMessage />
  <PressHighlights data={newsData} client:visible />
  <OurLeadership data={leadershipData} />
  <CoreValues />
  <Partners
    title="Trusted by global brands"
    client:only="react"
    assets={assets}
  />
  <Section client:visible />
</Layouts>

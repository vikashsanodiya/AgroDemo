---
import Layouts from "@layouts/Layouts.astro";

import { HeroTwoSideImageFade } from "@components/utils";
import { AboutTheAcademy, ApplicationForm } from "@components/products/grower";

import ImageLeft from "@assets/images/products/grower/farm-manager-academy/hero-1.webp";
import ImageRight from "@assets/images/products/grower/farm-manager-academy/hero-2.webp";
---

<Layouts
  title="Farm Manager Academy • Grower • Products | Complete Farmer"
  description="We are providing cutting-edge technological farming protocols and innovations with a unique business model and logistics that are revolutionizing..."
>
  <HeroTwoSideImageFade
    client:idle
    leftImage={ImageLeft.src}
    rightImage={ImageRight.src}
    buttonTitle="Join the academy"
    heading="The Farm Manager Academy"
    text="Gain skills and experience on farm management principles from Complete Farmer. Get paid to manage grower farms on our platform after successful completion of the program."
  />

  <AboutTheAcademy />

  <!-- modal -->
  <ApplicationForm client:idle title="Join the academy" />
</Layouts>

<script type="text/javascript" is:inline>
  const btns = document.querySelectorAll(".get-academy-form");

  btns?.forEach((btn) => {
    btn.addEventListener("click", () => {
      document.getElementById("hero-two-side-img-fade-button").click();
    });
  });
</script>

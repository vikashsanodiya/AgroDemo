---
import NormalHeader from "./NormalHeader";
import ProductsHeader from "./ProductsHeader";

export interface Props {
  pathname: string;
}

const { pathname } = Astro.props;
---

{
  pathname.includes("buyer") || pathname.includes("grower/") ? ( //FIXME: this will cause a bug but regx to the rescus
    <ProductsHeader client:idle pathname={pathname} />
  ) : (
    <NormalHeader client:idle pathname={pathname} />
  )
}

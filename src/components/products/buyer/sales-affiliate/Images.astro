---
import { Image } from "astro:assets";

import Leaves from "@assets/images/products/buyer/sales-affiliate/leaves.webp";

interface Props {
  image1: ImageMetadata;
  image2: ImageMetadata;
  image3: ImageMetadata;
}

const { image1, image2, image3 } = Astro.props;
---

<div class="relative w-full flex justify-start lg:w-[47%] xl:w-1/2 sm:rounded-none py-4">
  <Image
    src={image1}
    class="hidden xl:block w-full h-[430px] object-cover z-[9] m-auto relative"
    alt=""
  />
  <Image
    src={image2}
    class="hidden sm:block xl:hidden w-full h-[287px] lg:h-full object-cover z-[9] relative"
    alt=""
  />
  <Image
    src={image3}
    class="sm:hidden w-auto h-full object-cover z-[9] m-auto relative"
    alt=""
  />
  <div
    class="z-[8] -left-6 sm:-left-1/3 absolute top-[50%] sm:top-[60%] lg:top-[50%] -translate-y-1/2 sm:translate-x-[98px] sm:translate-y-[-204px] xl:-translate-y-1/2 xl:-translate-x-0"
  >
    <Image src={Leaves} alt="farmer" class="m-auto h-[308px] sm:h-[358px] lg:h-[430px] xl:w-full xl:h-[535px]" />
  </div>
</div>

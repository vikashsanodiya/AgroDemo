---
import { Image } from "astro:assets";

interface Props {
  title: string;
  image: ImageMetadata;
}

const { title, image } = Astro.props;
---

<div
  class="h-[150px] sm:h-52 md:h-72 flex justify-between overflow-hidden bg-grower-900"
>
  <div class="my-auto sm:w-[610px] xl:mx-auto pl-4 md:pl-6 xl:pl-0">
    <p
      class="text-xl sm:text-3xl md:text-5xl font-bold text-left text-white my-auto"
    >
      {title}
    </p>
  </div>
  <Image src={image} alt="Hero Image" class="w-auto h-auto"  />
</div>
